<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :region %>
      <%= f.text_field :region, class: 'form-control' %>
    <% end %>
  </div>
